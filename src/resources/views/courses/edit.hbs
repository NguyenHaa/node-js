<h3>Edit Course</h3>

<form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" value="{{course.name}}" id="name" placeholder="Enter name" name="name">
  </div>
   <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" value="{{course.description}}" id="description" placeholder="Enter description" name="description">
  </div>
   <div class="form-group">
    <label for="videoId">Video ID</label>
    <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" placeholder="Enter VideoId" name="videoId">
  </div>
  <div class="form-group">
    <label for="level">Level</label>
    <input type="text" class="form-control" value="{{course.level}}" id="level" placeholder="Enter level" name="level">
  </div>
  
  <button type="submit" class="btn btn-primary">Save</button>
</form>